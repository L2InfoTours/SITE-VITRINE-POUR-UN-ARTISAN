{% extends 'present.html.twig' %}
{%
set title = "Voir les OFFRES"
%}

{%
set image = asset("/images/home.jpeg")
%}

{% block body %}
    <section class="row">
        <div class="col col-6">
            {%for reponse in reponses %}
            <div class="card" style="width: 30rem;" open-tab="reponse={{ reponse.id }}&page={{page+1}}">
                <div>
                    <h5>{{ reponse.nom }} {{ reponse.prenom }}</h5>
                    <p>{{reponse.lettreMotivation}}</p>
                    {{ reponse.email }}
                    {{ reponse.telephone }}
                    <span class="datetime">{{ reponse }}</span>
                    {{ reponse.cv }}
                </div>
            </div>
            {% endfor %}
            <div class="row">
                <button class="btn outline" onclick="location.assign('reponse={{ reponse.id }}&page={{page-1}}')" >Precendante</button>
                <button class="btn outline" onclick="location.assign('reponse={{ reponse.id }}&page={{page+1}}')" >Suivante</button>
            </div>
        </div>
        <div class="col-6">
            <h5>{{ reponse.nom }} {{ reponse.prenom }}</h5>
                    <p>{{reponse.lettreMotivation}}</p>
                    {{ reponse.email }}
                    {{ reponse.telephone }}
                    <span class="datetime">{{ reponse }}</span>
                    {{ reponse.cv }}
        </div>
    </section>
	
{% endblock %}