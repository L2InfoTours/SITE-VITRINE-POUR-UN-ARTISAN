{% extends 'present.html.twig' %}
{%
set title = "Repondre à une OFFRES"
%}


{% block body %}
<section >
	{{ form_start(form) }}
	<div class="col ">
		<h1 class="text-center">Nouvelle demande de devis</h1>
		<div class="row">
			<div class="col-10 col-lg-4 col ">
				<div class="col ">
					<label class="form-label">Nom</label> 
					{{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
				</div>
				<div class="col ">
					<label class="form-label">Prenom</label> 
					{{ form_widget(form.prenom, {'attr':{'class':'form-control'}}) }}
				</div>
			</div>
			<div class="col-10 col-lg-4 col ">
				<div class="col ">
					<label class="form-label">Telephone </label>
					{{ form_widget(form.telephone, {'attr':{'class':'form-control'}}) }}
				</div> 
				<div class="col ">
					<label class="form-label">Email </label>
					{{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
				</div>
			</div>
		</div>
		<div class="col-10 col centred">
					<label class="form-label">Cv  </label>
					{{ form_widget(form.cv, {'attr':{'class':'form-control'}}) }}
				</div>
		<div class="col-10 col centred">
					<label class="form-label">Lettre_motivation </label>
					{{ form_widget(form.lettre_motivation, {'attr':{'class':'form-control'}}) }}
				</div>
		<button type="submit" class="btn outline uppercase form-submit">Terminé</button>
	</div>
	{{form_end(form)}}
</section>
{% endblock %}