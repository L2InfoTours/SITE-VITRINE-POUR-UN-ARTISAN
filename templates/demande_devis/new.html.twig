{% extends 'base.html.twig' %}



{% block title %}New DemandeDevis{% endblock %}

{% block body %}
        

    
     


    {{ form_start(form) }}

    <div class ="row bg-dark p-3">

        <div class="row">
            <div class="col p-3"><hr class="bg-light"></div>
            <h1 class="col-auto text-light">Nouvelle demande de devis</h1>
            <div class="col p-3"><hr class="bg-light"></div>
        </div>



        <div class="col-5 my-2 p-4 d-flex flex-column position-static" style="margin-left=3%">

            <label class="form-label my-2 text-light">Nom</label> 
            <div>{{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}</div>
            <label class="form-label my-2 text-light">Telephone </label>
            <div>{{ form_widget(form.telephone, {'attr':{'class':'form-control'}}) }} </div> 

        </div>

        <div class="col-2 ">
            <div class="vr bg-secondary" style="min-height: 100%; width: 5px; margin-left: 50%">
            </div>
        </div>

        <div class="col-5 my-2 p-4 d-flex flex-column position-static">

            <label class="form-label my-2 text-light">Adresse  </label>
            <div> {{ form_widget(form.adresse, {'attr':{'class':'form-control'}}) }} </div>
            <label class="form-label my-2 text-light">Email </label>
            <div> {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }} </div>
            
        </div>
        

        <div class=" my-2 p-4 ">
        <label class="form-label text-light"> Description </label>
        <div>{{ form_widget(form.description, {'attr': {'rows':"5", 'class':'col-12 form-control'} })}}</div>
  
  
  
    </div>
 
      <button type="submit" class="btn btn-dark" style="width: 50%;left: 50%;position: relative;transform: translate(-50%);border:solid">Enregistrer</button>


      
     <div class="row my-2">
            <div class="col p-3"><hr class="bg-light"></div>
            <h1 class="col-auto text-light">Contact</h1>
            <div class="col p-3"><hr class="bg-light"></div>
    </div>

    </div>
             

        {{ form_rest(form) }}

        
      
    {{form_end(form)}}










    <div class="row bg-secondary p-3">


        <div class="col-5 d-flex flex-column position-static">
            
                <div class="map-responsive mx-4" style="width: 100%;height: 100%;">
