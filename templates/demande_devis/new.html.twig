{% extends 'base.html.twig' %}



{% block title %}New DemandeDevis{% endblock %}

{% block body %}
    <h1 class="text-center">Nouvelle demande de devis</h1>

    
     


    {{ form_start(form) }}

    <div class ="row bg-black">
    <div class="col-5 my-2 p-4 d-flex flex-column position-static">

        <label class="form-label my-2">Nom</label> 
        <div>{{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}</div>
        <label class="form-label my-2">Telephone </label>
        <div class="form-control"> {{ form_widget(form.telephone) }} </div> 

    </div>
