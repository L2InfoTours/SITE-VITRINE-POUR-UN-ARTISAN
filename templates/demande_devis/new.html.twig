    </div>
    <div class="col-5 my-2 p-4 d-flex flex-column position-static">

        <label class="form-label my-2">adresse  </label>
        <div class="form-control"> {{ form_widget(form.adresse) }} </div>
        <label class="form-label my-2">email </label>
        <div class="form-control"> {{ form_widget(form.email) }} </div>
        
       </div>
    

    <div class=" my-2 p-4 ">
    <label class="form-label"> description </label>
    <div class:"form-control">{{ form_widget(form.description, {'attr': {'rows':"5", 'class':'col-12'} })}}</div>
  
  
  
     </div>
 
      <button type="submit" style="width: 50%;left: 50%;position: relative;transform: translate(-50%);">Enregistrer</button>
        
    </div>
             
            

        {{ form_rest(form) }}

        
      
    {{form_end(form)}}

    <div>
