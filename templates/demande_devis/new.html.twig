{% extends 'present.html.twig' %}
{% block title %}New DemandeDevis{% endblock %}
{% block body %}
<section class="bg-dark">
	{{ form_start(form) }}
	<div class="col ">
		<h1 class="text-center">Nouvelle demande de devis</h1>
		<div class="row">
			<div class="col-10 col-lg-4 col ">
				<div class="col ">
					<label class="form-label">Nom</label> 
					{{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
				</div>
				<div class="col ">
					<label class="form-label">Telephone </label>
					{{ form_widget(form.telephone, {'attr':{'class':'form-control'}}) }}
				</div> 
			</div>
			<div class="col-10 col-lg-4 col ">
				<div class="col ">
					<label class="form-label">Adresse  </label>
					{{ form_widget(form.adresse, {'attr':{'class':'form-control'}}) }}
				</div>
				<div class="col ">
					<label class="form-label">Email </label>
					{{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
				</div>
			</div>
		</div>
		<div class="col-10 col centred">
			<label class="form-label text-light"> Description </label>
			{{ form_widget(form.description, {'attr': {'rows':"5", 'class':'col-12 form-control'} })}}
		</div>
		<button type="submit" class="btn outline uppercase form-submit">Enregistrer</button>
	</div>
	{{ form_rest(form) }}
	{{form_end(form)}}
</section>
<section class="col">
	<h1 class="text-center">Contact</h1>
	<div class="row">
		<div class="col-5">
			<img-aspect class="big-img block shadow col-lg-5 col-10" aspect="4/3" crop="cover" src="">
		</div>
		<div class="col-10 col-lg-5">
			<ul class="">
				<li>
					<h5>Telephone</h5>
					<p>07 55 48 46 17</p>
				</li>
				<li>
					<h5>Addresse</h5>
					<p>2693 Metz Lane</p>
				</li>
				<li>
					<h5>Horaire de travail</h5>
					<p>7h00 - 18h00</p>
				</li>
			</ul>
		</div>
	</div>
</section>
{% endblock %}