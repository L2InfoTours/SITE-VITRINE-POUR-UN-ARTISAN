{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
{{encore_entry_link_tags('signin') }}
    <main class="form-signin">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="form-floating">
        <input type="email" class="form-control form-control-danger" id="username" name="_username" value="{{ last_username }}" placeholder="name@example.com">
        <label for="username">Adresse mail</label>
        </div>
        <div class="form-floating">
        <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
        <label for="password">Mot de passe</label>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Remember me
        </label>
        </div> #}
        <button class="w-100 btn btn-lg btn-primary" type="submit">Se connecter</button>
    </form>
    </main>
    
{% endblock %}