{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}


    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="row align-items-center g-lg-5 py-5">
          <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 mb-3">CONNECTEZ-VOUS SUR LEGERMAIN</h1>
            <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrapâ€™s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
          </div>
          <div class="col-md-10 mx-auto col-lg-5">
            {{encore_entry_link_tags('signin') }}
                <main class="form-signin">
                {% if error %}
                    <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <div class="form-floating">
                    <input type="email" class="form-control form-control-danger" id="username" name="_username" value="{{ last_username }}" placeholder="name@example.com">
                    <label for="username">Adresse mail</label>
                    </div>
                    <div class="form-floating">
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                    <label for="password">Mot de passe</label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                    </div> #}
                    <button class="w-100 btn btn-lg btn-primary" type="submit">Se connecter</button>
              <hr class="my-4">
              <small class="text-muted">By clicking Sign up, you agree to the terms of use.</small>
            </form>
          </div>
        </div>
      </div>
    
{% endblock %}